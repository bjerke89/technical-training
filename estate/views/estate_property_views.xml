<odoo>
	<data>
		<record id="properties_model_action" model="ir.actions.act_window">
			<field name="name">Properties</field>
			<field name="res_model">estate.property</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record id="propterties_view_tree" model="ir.ui.view">
			<field name="name">estate.properties.tree</field>
			<field name="model">estate.property</field>
			<field name="arch" type="xml">
				<tree string="Properties">
					<field name="name" string="Title" />
					<field name="postcode" string="Postcode" />
					<field name="bedrooms" string="Bedrooms" />
					<field name="living_area" string="Living Area (sqm)" />
					<field name="expected_price" string="Expected Price" />
					<field name="selling_price" string="Selling Price" />
					<field name="date_availability" string="Available From" />
				</tree>
			</field>
		</record>
		<record id="propterties_view_form" model="ir.ui.view">
			<field name="name">estate.properties.form</field>
			<field name="model">estate.property</field>
			<field name="arch" type="xml">
				<form string="New Property">
					<sheet>
						<h1>
							<div class="oe_title">
								<field name="name" />
							</div>
						</h1>
						<h3>
							<div>
								<field name="tags" widget="many2many_tags"/>
							</div>
						</h3>
						<group>
							<group>
								<field name="postcode" />
								<field name="date_availability" />
							</group>
							<group>
								<field name="expected_price" />
								<field name="best_offer" />

								<field name="selling_price" />
							</group>
						</group>
						<notebook>
							<page string="Description">
								<group>
									<group>
										<field name="description" />
										<field name="bedrooms" />
										<field name="living_area" string="Living Area (sqm)" />
										<field name="facades" />
										<field name="garage" />
										<field name="garden" />
										<field name="garden_area" string="Garden Area (sqm)" />
										<field name="garden_orientation" />
										<field name="total_area" />

									</group>
									<group>
										<field name="active" />
										<field name="state" string="Status" />
										<field name="property_type_id" string="Property Type" />
									</group>
								</group>
							</page>
							<page string="Offers">
								<field name="offer_ids" />
							</page>
							<page string="Other Info">
								<group>
									<field name="salesman" />
									<field name="buyer" />
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>



		<record id="estate_offers_view_form" model="ir.ui.view">
			<field name="name">estate.properties.offer.form</field>
			<field name="model">estate.property.offer</field>
			<field name="arch" type="xml">
				<form string="New Offer">
					<group>
						<group>
							<field name="price"/>
							<field name="partner_id"/>
							<field name="status"/>
							<field name="validity"/>
							<field name="date_deadline"/>
						</group>
					</group>
				</form>
			</field>
		</record>

		<record id="estate_offers_view_tree" model="ir.ui.view">
			<field name="name">estate.properties.offer.tree</field>
			<field name="model">estate.property.offer</field>
			<field name="arch" type="xml">
				<tree string="">
					<field name="price"/>
					<field name="partner_id"/>
					<field name="status"/>
					<field name="date_deadline"/>
				</tree>
			</field>
		</record>


		<record id="view_estate_search" model="ir.ui.view">
			<field name="name">estate.properties.search</field>
			<field name="model">estate.property</field>
			<field name="arch" type="xml">
				<search string="Properties">
					<field name="name" string="Title" />
					<field name="postcode" string="Postcode" />
					<field name="expected_price" string="Expected Price" />
					<field name="bedrooms" string="Bedrooms" />
					<field name="living_area" string="Living Area" />
					<field name="facades" string="Facades" />
					<separator />
					<filter string="Available" name="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
					<group expand="1" string="Group By">
						<filter string="Postcode" name="postcode" context="{'group_by':'postcode', 'residual_visible':True}" />
					</group>
				</search>
			</field>
		</record>
	</data>
</odoo>
